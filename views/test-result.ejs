<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Results</title>
    <link rel="stylesheet" href="/css/upcoming.css"> <!-- Ensure this path is correct -->
</head>
<body>
    <header class="navbar">
        <nav class="navbar">
            <div class="navbar-left">
                <a href="/" class="logo"><img src="/images/drdo_logo.png" alt="Logo"></a>
            </div>
            <div class="navbar-right">
                <a href="#about">About</a>
                <a href="#photos">Photos</a>
                <a href="#contact">Contact Us</a>
            </div>
        </nav>
    </header>

    <div class="container">
        <h1 class="heading">Test Results</h1>
        <h2 class="sub_heading">Review the submitted tests</h2>

        <% Object.keys(tests).forEach(testId => { %>
            <h2>Results for Test ID: <%= testId %></h2>
            <p>Description: <%= tests[testId].description %></p>
            <p>Total Questions: <%= tests[testId].questions.length %></p>

            <h3>Submissions</h3>
            <table>
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Score</th>
                        <th>Submission Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% submissions.filter(submission => submission.testId === testId).forEach(submission => { %>
                        <tr>
                            <td><%= submission.email %></td>
                            <td><%= submission.score %></td>
                            <td><%= new Date(submission.submittedAt.toDate()).toLocaleString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% }) %>
    </div>

    <footer class="footer">
        <h2>Stay Updated</h2>
        <div class="subscribeNewslettersBlock">Subscribe to our newsletter for the latest updates.</div>
        <div class="connectUs">Follow us on social media:</div>
        <ul class="socialLinks">
            <li><a href="#"><i class="fab fa-facebook"></i> Facebook</a></li>
            <li><a href="#"><i class="fab fa-twitter"></i> Twitter</a></li>
            <li><a href="#"><i class="fab fa-instagram"></i> Instagram</a></li>
        </ul>
        <div class="impoLinks">Important Links:</div>
        <ul class="footerMenuLinks">
            <li><a href="#">Privacy Policy</a></li>
            <li><a href="#">Terms of Service</a></li>
            <li><a href="#">Support</a></li>
        </ul>
    </footer>
</body>
</html>
